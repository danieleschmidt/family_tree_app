# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org/

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# HTML templates
[*.{html,htm}]
indent_size = 2
max_line_length = 120

# CSS and JavaScript
[*.{css,scss,js,ts}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Docker files
[{Dockerfile,*.dockerfile}]
indent_size = 2

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2
max_line_length = 120

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# Template files
[*.{template,tmpl}]
indent_size = 2