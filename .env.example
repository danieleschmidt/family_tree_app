# Family Tree App Environment Configuration

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_SETTINGS_MODULE=app.conf.development.settings

# Database Configuration
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=family_tree_db
DATABASE_USER=family_tree_user
DATABASE_PASSWORD=family_tree_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# For development, you can use SQLite instead:
# DATABASE_ENGINE=django.db.backends.sqlite3
# DATABASE_NAME=db.sqlite3

# Cache Configuration (Redis)
CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
CACHE_LOCATION=redis://127.0.0.1:6379/1

# Email Configuration (SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password
DEFAULT_FROM_EMAIL=Family Tree App <your-email@gmail.com>

# For development, you can use console backend:
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Media and Static Files
MEDIA_ROOT=/app/content/media
STATIC_ROOT=/app/content/static/collected
MEDIA_URL=/media/
STATIC_URL=/static/

# Cloud Storage (Optional - for production)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-s3-bucket
# AWS_S3_REGION_NAME=us-east-1

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API Configuration
API_RATE_LIMIT=1000/hour
API_THROTTLE_ANONYMOUS=100/hour
API_THROTTLE_USER=1000/hour

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/family_tree.log

# Performance Settings
CACHE_TIMEOUT=3600
SESSION_COOKIE_AGE=1209600  # 2 weeks
SESSION_EXPIRE_AT_BROWSER_CLOSE=False

# Family Tree Specific Settings
MAX_FAMILY_TREE_SIZE=5000  # Maximum number of people per tree
MAX_FILE_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Development Tools
ENABLE_DEBUG_TOOLBAR=True
ENABLE_SILK_PROFILING=False

# Analytics and Monitoring (Optional)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr,ru,zh,es
TIME_ZONE=UTC
USE_I18N=True
USE_L10N=True
USE_TZ=True