# Family Tree App - Environment Configuration Template
# Copy this file to .env and update the values for your environment

# ==================== DJANGO CONFIGURATION ====================

# Django Secret Key (generate a new one for production)
SECRET_KEY=your-secret-key-here-change-this-in-production

# Debug Mode (set to False in production)
DEBUG=True

# Allowed Hosts (comma-separated list for production)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Django Settings Module
DJANGO_SETTINGS_MODULE=app.conf.development.settings

# ==================== DATABASE CONFIGURATION ====================

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL use: postgresql://user:password@host:port/dbname
# DATABASE_URL=postgresql://familytree_user:password@localhost:5432/familytree_db

# Database connection pool settings (for PostgreSQL)
DB_CONN_MAX_AGE=60
DB_CONN_HEALTH_CHECKS=True

# ==================== CACHE CONFIGURATION ====================

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Cache Key Prefix
CACHE_KEY_PREFIX=familytree

# ==================== EMAIL CONFIGURATION ====================

# Email Backend (for development, use console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production, use SMTP:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP Configuration (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Email Settings
DEFAULT_FROM_EMAIL=Family Tree App <noreply@familytreeapp.com>
ADMIN_EMAIL=admin@familytreeapp.com

# ==================== MEDIA AND STATIC FILES ====================

# Media Files Configuration
MEDIA_URL=/media/
MEDIA_ROOT=media/

# Static Files Configuration
STATIC_URL=/static/
STATIC_ROOT=staticfiles/

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880  # 5MB
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10MB
FILE_UPLOAD_PERMISSIONS=0o644

# ==================== SECURITY CONFIGURATION ====================

# Security Settings
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY
SECURE_HSTS_SECONDS=31536000  # 1 year (use only with HTTPS)
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# CSRF Configuration
CSRF_COOKIE_SECURE=False  # Set to True in production with HTTPS
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Strict

# Session Configuration
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
SESSION_COOKIE_AGE=86400  # 24 hours

# ==================== LOGGING CONFIGURATION ====================

# Logging Level
LOG_LEVEL=INFO

# Log File Path
LOG_FILE=logs/familytree.log

# ==================== THIRD-PARTY SERVICES ====================

# Plotly/Dash Configuration
PLOTLY_DOMAIN=https://plot.ly

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=['json']
CELERY_TIMEZONE=UTC

# ==================== DEVELOPMENT TOOLS ====================

# Django Debug Toolbar (development only)
ENABLE_DEBUG_TOOLBAR=True

# Django Extensions
ENABLE_DJANGO_EXTENSIONS=True

# ==================== INTERNATIONALIZATION ====================

# Language and Timezone
LANGUAGE_CODE=en-us
TIME_ZONE=UTC
USE_I18N=True
USE_L10N=True
USE_TZ=True

# Available Languages
LANGUAGES=en,fr,ru,zh-hans,es

# ==================== CLOUD STORAGE (OPTIONAL) ====================

# AWS S3 Configuration (if using cloud storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.com
# AWS_DEFAULT_ACL=private

# Google Cloud Storage Configuration (alternative)
# GS_BUCKET_NAME=your-gcs-bucket-name
# GS_PROJECT_ID=your-gcp-project-id
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# ==================== MONITORING AND ANALYTICS ====================

# Sentry Configuration (for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics (optional)
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ==================== BACKUP CONFIGURATION ====================

# Backup Settings
BACKUP_ENABLED=True
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=backups/

# ==================== FEATURE FLAGS ====================

# Feature Toggles
ENABLE_FAMILY_TREE_SHARING=True
ENABLE_ADVANCED_SEARCH=True
ENABLE_ANALYTICS_DASHBOARD=True
ENABLE_EXPORT_FEATURES=True
ENABLE_COLLABORATION=True

# API Features
ENABLE_REST_API=True
ENABLE_GRAPHQL_API=False

# ==================== PERFORMANCE SETTINGS ====================

# Performance Configuration
MAX_FAMILY_TREE_SIZE=10000  # Maximum number of people per tree
SEARCH_RESULTS_LIMIT=100
VISUALIZATION_NODE_LIMIT=500

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# ==================== DEVELOPMENT HELPERS ====================

# Development Database Seeding
SEED_DATABASE=False
SEED_SAMPLE_DATA=False

# Testing Configuration
TEST_DATABASE_NAME=test_familytree

# Fixtures for Testing
TEST_FIXTURES=accounts.fixtures.test_users,accounts.fixtures.test_family_trees

# ==================== NOTES ====================

# Environment-Specific Notes:
# - Update SECRET_KEY for production deployment
# - Set DEBUG=False in production
# - Configure proper database settings for production
# - Set up SSL/TLS certificates and update security settings
# - Configure email settings for production notifications
# - Set up proper backup and monitoring in production